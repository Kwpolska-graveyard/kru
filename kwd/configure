#!/bin/sh
mkdir ~/.kwd
cp template ~/.kwd/
mkdir ~/.kwd/lic
cp gplv3 ~/.kwd/lic/

echo 'What is the spacer of NOTES/USAGE? (eg. -----)'
read spacer
echo 'What is the default copyright note file?'
read defcopy
echo 'spacer='$spacer'
defcopy='$defcopy > ~/.kwd/kwdrc.ini
echo "KWD was successfully configured. Yay!"
