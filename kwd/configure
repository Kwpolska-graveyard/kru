#!/bin/sh
mkdir ~/.kwd
cp template ~/.kwd/
mkdir ~/.kwd/lic
cp gplv3 ~/.kwd/lic/

echo 'What is the spacer of NOTES/USAGE? (eg. -----)'
read spacer -p '> '
echo 'What is the default copyright note file?'
read defcopy -p '> '
echo 'my $spacer = "'$spacer'";
my $defcopy = "'$defcopy'";' > ~/.kwd/kwdrc
echo "KWD was successfully configured. Yay!"
