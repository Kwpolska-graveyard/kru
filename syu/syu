#!/bin/bash
#Kw's Maintenance Script
#Arch Linux Release
#Copyright Kwpolska 2010. Licensed under GPLv3.

#f(1) syuhelp
function syuhelp {
echo "Kw's Maintenance Script - Arch Linux Release"
echo "Copyright Kwpolska 2010. Licensed under GPLv3."
echo "Syntax: syu [argument]"
echo "no arguments  Perform an update (pacman -Syu + clyde -Syu --aur)"
echo "-a --noaur    Disable clyde from the update process"
echo "-c --cron     Perform a cron-friendly update (NTP + pacman -Sy)"
echo "-h --help     Show this message."
echo "-l --lock     Unlock pacman database."
echo "-o --optimize Optimizes the database."
echo "-r --reflect  Run reflector."
echo "-t --time     Update time."
exit
}

#f(2) syunlock
function syunlock {
rm /var/lib/pacman/db.lck
echo "Database unlocked."
exit
}

#f(3) syucron
function syucron {
sntp pl.pool.ntp.org > /dev/null
pacman -Sy > /dev/null
exit
}

#f(4) syutime
function syutime {
sntp pl.pool.ntp.org
exit
}

#f(5) syureflect
function syureflect {
echo "Running reflector. This might take up to 10 minutes (or even longer)."
time reflector -f 10 -ro /etc/pacman.d/mirrorlist
echo "Reflecting finished. Updating..."
pacman -Syyu
clyde -Syyu --aur
exit
}

#f(6) syuoptimize
function syuoptimize {
pacman-optimize
}

case "$1" in 
 "-a" | "--noaur")    syuaur="n"  ;;
 "-c" | "--cron")     syucron     ;;
 "-h" | "--help")     syuhelp     ;;
 "-l" | "--lock")     syunlock    ;;
 "-o" | "--optimize") syuoptimize ;;
 "-r" | "--reflect")  syureflect  ;;
 "-t" | "--time")     syutime     ;;
esac

pacman -Syu
if [ "$syuaur" != "n" ]; then
clyde -Syu --aur
fi
